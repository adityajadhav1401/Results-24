<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="48dp">
                <ImageView
                    android:id="@+id/job_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/job_logo"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="1dp"
                        android:src="@drawable/briefcase"
                        android:tint="@color/cardview_dark_background"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_name_text"
                        android:textSize="12dp"
                        android:text="Post Name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="1dp"
                        android:src="@drawable/recruiter"
                        android:tint="@color/cardview_dark_background"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_recruiter_text"
                        android:textSize="12dp"
                        android:text="Recruitment Board"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="1dp"
                        android:src="@drawable/resume"
                        android:tint="@color/cardview_dark_background"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_qualification_text"
                        android:textSize="12dp"
                        android:text="Qualification"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="1dp"
                        android:src="@drawable/vacancy"
                        android:tint="@color/cardview_dark_background"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_vacancy_text"
                        android:textSize="12dp"
                        android:text="Total Vacancy"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="1dp"
                        android:src="@drawable/date"
                        android:tint="@color/cardview_dark_background"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_date_text"
                        android:textSize="12dp"
                        android:text="DD-MM-YY"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_postdate_text"
                        android:textStyle="italic"
                        android:textSize="12dp"
                        android:text="DD-MM-YY"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>